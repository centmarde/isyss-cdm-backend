{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "composite": true, // good for project references in a monorepo
    "declaration": true, // generates .d.ts files
    "declarationMap": true, // helpful for editor navigation
